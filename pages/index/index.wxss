.title-list {
  padding: 20rpx;
  
  display: flex;
  background-color: #c1d2f0;
}

.title-item {
  width: 120rpx;
  color: white;
}

.news-first { 
  position: relative;
  height: 300rpx;
  border-radius: 5rpx;
  /* margin: none 20rpx 20rpx 20rpx */
}

.news-title {
  font-size: 35rpx;
  line-height: 49rpx;
  padding-top: 160rpx;
  color: moccasin
  }

.news-info {
  font-size: 30rpx;
  line-height: 42rpx;
  color: greenyellow;
}

.news-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 100rpx;
}

.news-list {
  font-size: 130rpx;
}

.news-item {
  display:flex;
  flex-flow: row;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 20rpx;
  height: 300rpx;
}

.news-item:last-child {
  border-bottom: none
}

.message-img {
  position: relative;
  height: 200rpx;
  width: 200rpx; 
  margin: 40rpx 30rpx 30rpx 30rpx;
  flex-grow: 1;
  border-radius: 20rpx;
}

.news-message{
  margin-left: 20rpx;
  position: relative;
  width: 500rpx;
  padding-top: 20rpx;
  font-family: "幼圆", "华文仿宋"
}

.message-title {
  font-size: 40rpx;
  line-height: 56rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.message-date {
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}